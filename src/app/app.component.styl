.sidenav-container,
.sidenav-content,
.sidenav {
  height: 100%;
}

.sidenav-container {
  .sidenav {
    width: 250px;
  }

  .sidenav-content {
    .sidenav-toolbar {
      display: flex;
      justify-content: space-between;
      &-items {
        display: flex;
        .sidenav-toolbar-link {
          padding: 10px;
          a {
            text-decoration: none;
          }
        }
      }
    }
    .router-container {
      padding: 10px;
    }
  }
}

