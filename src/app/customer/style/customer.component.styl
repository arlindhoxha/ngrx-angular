.customers-container {
  display: flex;
  border: 1px solid black;

  .customers-table-container {
    width: 100%;
    border: 1px solid black;

    .customers-table-header {
      display: flex;
      padding: 10px;
      justify-content: space-between;
      align-items: center;
      .table-title {
        align-self: baseline;
        font-size: 18px;
        font-weight: bold;
      }
    }

    .customers-table {
      width: 100%;

    }

    .icon-styles {
      cursor: pointer;

    }
  }
}
